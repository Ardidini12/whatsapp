<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacts</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .duplicate { color: red; }
        table { width: 100%; margin-top: 20px; }
        th, td { text-align: center; }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Contacts</h1>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a href="/dashboard" class="nav-link">Back to Dashboard</a></li>
            </ul>
        </nav>
        
        <!-- Import Contacts Form -->
        <form action="/import" method="post" enctype="multipart/form-data" class="my-3">
            <div class="form-group">
                <input type="file" name="contactsFile" accept=".csv, .xlsx, .json" class="form-control-file" required>
            </div>
            <button type="submit" class="btn btn-primary">Import Contacts</button>
        </form>
        
        <!-- Export Contacts -->
        <div class="btn-group mb-3" role="group">
            <a href="/export/csv" class="btn btn-secondary">Export as CSV</a>
            <a href="/export/xlsx" class="btn btn-secondary">Export as Excel</a>
            <a href="/export/json" class="btn btn-secondary">Export as JSON</a>
        </div>
        
        <!-- Manually Add Contact Form -->
        <form action="/add-contact" method="post" class="mb-3">
            <div class="form-row">
                <div class="col">
                    <input type="text" name="name" class="form-control" placeholder="Name" required>
                </div>
                <div class="col">
                    <input type="text" name="surname" class="form-control" placeholder="Surname" required>
                </div>
                <div class="col">
                    <input type="text" name="phone_number" class="form-control" placeholder="Phone Number" required>
                </div>
                <div class="col">
                    <input type="email" name="email" class="form-control" placeholder="Email">
                </div>
                <div class="col">
                    <input type="date" name="birthday" class="form-control" placeholder="Birthday" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-2">Add Contact</button>
        </form>
        
        <!-- Contacts Table -->
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Birthday</th>
                    <th>Source</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% contacts.forEach(contact => { %>
                    <tr class="<%= contact.isDuplicate ? 'duplicate' : '' %>">
                        <td><%= contact.name %></td>
                        <td><%= contact.surname %></td>
                        <td><%= contact.phone_number %></td>
                        <td><%= contact.email %></td>
                        <td><%= new Date(contact.birthday).toLocaleDateString('en-US', {month: 'short', day: '2-digit', year: 'numeric'}) %></td>
                        <td><%= contact.source %></td>
                        <td>
                            <a href="/edit-contact/<%= contact.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/delete-contact/<%= contact.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- In the contact list -->
        <% contacts.forEach(contact => { %>
            <div class="contact">
                <h3><%= contact.name %> <%= contact.surname %></h3>
                <p>Phone: <%= contact.phone_number %></p>
                <form action="/set-template/<%= contact.id %>" method="post">
                    <select name="template" class="form-control">
                        <option value="default" <%= contact.messageTemplate === 'default' ? 'selected' : '' %>>Default</option>
                        <option value="formal" <%= contact.messageTemplate === 'formal' ? 'selected' : '' %>>Formal</option>
                        <option value="funny" <%= contact.messageTemplate === 'funny' ? 'selected' : '' %>>Funny</option>
                    </select>
                    <button type="submit" class="btn btn-info mt-2">Save Template</button>
                </form>
            </div>
        <% }); %>
    </div>
</body>
</html>
